{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "lib",

    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@infraestructure/*": ["infraestructure/*"],
      "@application/*": ["application/*"],
      "@interfaces/*": ["interfaces/*"],
      "@app/*": ["app/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "lib"]
}
